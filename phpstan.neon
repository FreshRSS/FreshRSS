parameters:
	# TODO: Increase rule-level https://phpstan.org/user-guide/rule-levels
	level: 6
	fileExtensions:
		- php
		- phtml
	paths:
		- .
	excludePaths:
		analyse:
			- lib/marienfressinaud/*
			- lib/phpmailer/*
			- lib/SimplePie/*
		analyseAndScan:
			- .git/*
			- node_modules/*
			# TODO: include tests
			- tests/*
			- vendor/*
	bootstrapFiles:
		- cli/_cli.php
		- lib/favicons.php
